{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "bin",
    "lib": ["es2017"],
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
